<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.rulaibao.activity.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_training_ask"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            app:tabMaxWidth="0dp"
            app:tabGravity="center"
            app:tabMode="scrollable"
            app:tabIndicatorColor="@color/orange"
            app:tabBackground = "@color/white"
            app:tabTextAppearance="@style/training_tab"
            app:tabContentStart="20dp"
            app:tabTextColor="@color/txt_mark_gray"
            app:tabSelectedTextColor="@color/txt_black1"
            >

        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_training_ask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tl_training_ask"
            android:layout_marginTop="10dip"
            android:background="@color/white"
            />


    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        >
        <Button
            android:id="@+id/btn_training_ask"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/shape_ellipse_orange_btn"
            android:text="我要提问"
            android:textColor="@color/bg_white"
            android:textSize="16sp"
            android:layout_marginBottom="10dip"
            />

    </FrameLayout>

</FrameLayout>

