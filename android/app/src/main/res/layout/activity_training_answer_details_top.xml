<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.rulaibao.activity.MainActivity"
    android:background="@color/gray_light"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_answer_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1.2dip"
        android:text="---"
        android:textSize="16sp"
        android:textColor="@color/txt_black1"
        android:paddingLeft="15dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:paddingTop="10dip"
        android:background="@color/white"
        >
        <com.rulaibao.widget.CircularImage
            android:id="@+id/iv_answer_detatils_manager"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/img_default_photo"
            />

        <TextView
            android:id="@+id/tv_answer_details_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/iv_answer_detatils_manager"
            android:layout_centerVertical="true"
            android:text="---"
            />
        <TextView
            android:id="@+id/tv_answer_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dip"
            android:text="1990-01-01"
            android:visibility="gone"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_answer_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip"
        android:background="@color/white"
        android:text="---"
        android:textSize="16sp"
        android:lineSpacingExtra="2dip"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_answer_detailas_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:src="@mipmap/img_answer_zaned"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dip"
            android:layout_marginTop="20dip"
            android:layout_below="@id/iv_answer_detailas_zan"
            android:layout_centerHorizontal="true"
            android:text="觉得写的好就给个赞吧"
            android:textSize="12sp"
            />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        >
        <TextView
            android:id="@+id/tv_answer_details_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:text="0评论"
            />

    </RelativeLayout>


</LinearLayout>
