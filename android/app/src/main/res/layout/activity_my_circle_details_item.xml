<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dip"
        >
        <com.rulaibao.widget.CircularImage
            android:id="@+id/iv_training_circle_details_manager"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:src="@mipmap/img_default_photo"
            android:layout_marginLeft="15dip"
            />

        <TextView
            android:id="@+id/tv_training_circle_details_manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="--"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_circle_details_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="---"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_circle_details_time"
            android:layout_width="0dip"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="4-4 12:12"
            android:textSize="12sp"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="10dip"
            />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_circle_details_message"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="15dip"
                android:paddingBottom="10dip"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_message_icon"
                    />
                <TextView
                    android:id="@+id/tv_circle_details_message_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="0"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_circle_details_zan"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="15dip"
                android:paddingBottom="10dip"
                >
                <ImageView
                    android:id="@+id/iv_circle_details_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/img_zan_icon"
                    />
                <TextView
                    android:id="@+id/tv_circle_details_zan_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="0"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@color/gray_light"
        android:layout_marginTop="10dip"
        />



</LinearLayout>
