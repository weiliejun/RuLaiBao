<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="@color/bg_white"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/iv_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/img_arrow_right"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@id/iv_item_arrow"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tv_ask_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="12dp"
            android:text="公告通通知标公告通通知标公告通通知标公"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/txt_gray_d"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_small_bell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ask_title"
            android:layout_centerVertical="true"
            android:layout_marginTop="7dp"
            android:src="@mipmap/icon_small_bell"/>

        <TextView
            android:id="@+id/tv_answer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_small_bell"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="7dp"
            android:text=""
            android:textColor="@color/txt_mark_gray"
            android:textSize="14sp"/>
    </RelativeLayout>

    <View
        style="@style/v_line"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
